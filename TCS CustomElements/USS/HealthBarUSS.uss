.health-bar {
    flex-shrink: 0;
    flex-grow: 0;
    width: 100%;
    height: 100%;
}

.health-bar_container {
    flex-shrink: 0;
    flex-grow: 0;
    width: 100%;
    height: 100%;
}

.health-bar_delayed-progress {
    position: absolute;
    background-color: rgb(74, 13, 13);
    top: 0;
    left: 0;
    bottom: 0;
    flex-shrink: 0;
    flex-grow: 1;
}

.health-bar_progress {
    position: absolute;
    background-color: rgb(163, 23, 23);
    top: 0;
    left: 0;
    bottom: 0;
    flex-shrink: 0;
    flex-grow: 1;
}

.health-bar_title-container {
    flex-direction: row;
    justify-content: center;
    flex-shrink: 0;
    flex-grow: 0;
    width: 100%;
    height: 100%;
}

.health-bar_title {
    -unity-text-align: middle-center;
    color: rgb(255, 255, 255);
    flex-shrink: 1;
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    flex-grow: 1;
}

.health-bar_background {
    background-color: rgba(22, 22, 22, 0.75);
    margin-top: 1px;
    margin-right: 1px;
    margin-bottom: 1px;
    margin-left: 1px;
    flex-shrink: 0;
    flex-grow: 0;
    width: 100%;
    height: 100%;
}
